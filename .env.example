# ============================================
# StockIQ Environment Variables
# ============================================
# Copy this file to .env.local and fill in your values

# ============================================
# Supabase Configuration
# ============================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# AI Services
# ============================================
# Claude API (Anthropic)
CLAUDE_API_KEY=sk-ant-api...

# OpenAI (Optional - for comparison)
OPENAI_API_KEY=sk-...

# ============================================
# Stock Market APIs
# ============================================
# Korea Investment Securities (한국투자증권)
KIS_API_KEY=your-app-key
KIS_API_SECRET=your-app-secret
KIS_ACCOUNT_NO=your-account-number

# Yahoo Finance (for international stocks)
# No API key required

# Alpha Vantage (backup provider)
ALPHA_VANTAGE_KEY=your-alpha-vantage-key

# ============================================
# News APIs
# ============================================
# Naver News API
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# NewsAPI.org
NEWS_API_KEY=your-newsapi-key

# ============================================
# External Services
# ============================================
# Notion API (for export)
NOTION_API_KEY=secret_...
NOTION_DATABASE_ID=your-database-id

# Redis (for queue management)
REDIS_URL=redis://localhost:6379
# or Upstash Redis
UPSTASH_REDIS_REST_URL=https://...upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# ============================================
# Analytics & Monitoring
# ============================================
# Google Analytics
NEXT_PUBLIC_GA_ID=G-...

# Sentry
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# ============================================
# App Configuration
# ============================================
# App URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Rate Limits
RATE_LIMIT_AI_REQUESTS=100
RATE_LIMIT_AI_WINDOW=3600
RATE_LIMIT_STOCK_REQUESTS=1000
RATE_LIMIT_STOCK_WINDOW=60

# AI Cost Management
AI_DAILY_BUDGET_USD=10.00
AI_COST_ALERT_THRESHOLD=0.8

# ============================================
# Development
# ============================================
# Debug Mode
DEBUG=false

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# Security
# ============================================
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-key

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-encryption-key